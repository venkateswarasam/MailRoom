<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="135dp"

            android:padding="10dp"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="90.65dp"

            android:background="@drawable/et_bg"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="3dp">




            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="center"
                android:maxLength="20"
                android:hint="@string/email"
                android:textAlignment="viewStart"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />


            <ImageView
                app:srcCompat="@drawable/ic_outline_email_24"

                android:id="@+id/passwordinvisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.1"
                tools:ignore="VectorDrawableCompat" />







        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTextField"
            android:layout_marginTop="90.65dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:hint="Email">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text"
                android:textSize="13.82sp"
                android:padding="3dp"
                android:inputType="textEmailAddress"


                android:textColor="@color/black"

                android:drawableEnd="@drawable/ic_outline_email_24"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_bg"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="3dp">




            <com.google.android.material.textfield.TextInputEditText
                android:layout_gravity="center"
                android:textAlignment="viewStart"
                android:id="@+id/pasword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/password"

                android:maxLength="20"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                tools:ignore="RtlCompat" />





            <ImageView
                app:srcCompat="@drawable/ic_outline_lock_24"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.1"
                tools:ignore="VectorDrawableCompat" />







        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25dp"



            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/password">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                android:textSize="13.82sp"
                android:padding="3dp"
                android:inputType="textPassword"



                android:textColor="@color/black"

                android:drawableEnd="@drawable/ic_outline_lock_24"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </com.google.android.material.textfield.TextInputLayout>












        <TextView


            android:id="@+id/forgotpassword"
            android:textColor="@color/purple_700"
            android:layout_marginRight="20dp"
            android:layout_marginTop="19dp"
            android:gravity="end"
            android:layout_gravity="end"
            android:height="20dp"
            android:textSize="13.82sp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:lineSpacingMultiplier="1.45"
            android:text="Forgot password?"
            android:width="118dp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="264dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="@string/sign_in"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />


        <TextView
            android:textSize="11.85sp"
            android:textColor="#99000000"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:lineSpacingMultiplier="1.35"
            android:text="@string/by_clicking_sign_in_you_accept_the_elemica_privacy_policy"
            android:width="332dp" />


        <ImageView
            android:layout_marginTop="40dp"
            android:layout_gravity="center"

            android:src="@drawable/elemica"
            android:layout_width="80.27dp"
            android:layout_height="30dp"/>


        <TextView
            android:id="@+id/privacy"
            android:textColor="#DE000000"
            android:textStyle="normal"
            android:textSize="11.8sp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:height="16dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:lineSpacingMultiplier="1.35"
            android:text="@string/elemica_com"
            android:width="74dp" />

    </LinearLayout>


</RelativeLayout>