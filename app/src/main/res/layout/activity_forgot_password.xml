<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".activities.forgot.ForgotPassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/logo"
      app:layout_constraintVertical_chainStyle="packed"
      app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
      android:background="@color/purple_700"
      android:layout_width="match_parent"
      android:layout_height="56dp">

      <TextView

          android:textSize="18sp"
          android:fontFamily="@font/open_sans"
          android:textColor="#FBFBFB"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"
          android:lineSpacingMultiplier="1.16"
          android:text="@string/back_to_sign_in"
          android:width="216dp" />


  </androidx.appcompat.widget.Toolbar>


    <ImageView
        app:layout_constraintVertical_chainStyle="packed"


        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"




        android:id="@+id/logo"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/logo"
        android:layout_width="312dp"
        android:layout_height="47.35dp"/>






    <TextView
        android:fontFamily="@font/open_sans"
        android:id="@+id/emailmsg"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="11.85sp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="85.65dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:lineSpacingMultiplier="1.35"
        android:text="@string/enter_your_email_address_and_we_ll_send_you_link_to_reset_your_password"
        android:width="332dp" />




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTextField"
            app:layout_constraintTop_toBottomOf="@id/emailmsg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/email">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailtext"
                android:textSize="13.82sp"
                android:padding="3dp"
                android:layout_gravity="center"


                android:textColor="@color/black"

                android:drawableEnd="@drawable/ic_outline_email_24"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            app:layout_constraintTop_toBottomOf="@id/filledTextField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/resetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/resetpassword"
            android:textAllCaps="true"
            android:textColor="#FBFBFB"
            android:textSize="13.55sp"
            android:textStyle="bold" />




    <ImageView

        android:id="@+id/elemicalogo"

        app:layout_constraintTop_toBottomOf="@id/resetpassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="121dp"
        android:layout_gravity="center"

        android:src="@drawable/elemica"
        android:layout_width="80.27dp"
        android:layout_height="30dp"/>


    <TextView
        app:layout_constraintTop_toBottomOf="@id/elemicalogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/privacy"
        android:textColor="#DE000000"
        android:textStyle="normal"
        android:textSize="11.8sp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:height="16dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:lineSpacingMultiplier="1.35"
        android:text="@string/elemica_com"
        android:width="74dp" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>