<?xml version="1.0" encoding="utf-8"?>
<com.zerobranch.layout.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    app:draggedItem="@id/drag_item"
    app:leftItem="@id/options_layout"
    app:swipeDirection="left"
    app:isContinuousSwipe="true"
    android:id="@+id/swipelayout"
    android:layout_height="wrap_content">




    <LinearLayout

        android:id="@+id/drag_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:id="@+id/trackingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Tracking #"
            android:textColor="#DE000000"
            android:textSize="15.8sp" />


        <TextView
            android:id="@+id/carruername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans"
            android:text="Carrier Name"
            android:textColor="#99000000"
            android:textSize="13.82sp"
            />
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_gravity="end"
        android:id="@+id/options_layout"
        android:layout_alignParentEnd="true"

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:background="#B00020"

            android:id="@+id/delete_img"
            android:src="@drawable/ic_outline_delete_outline_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


        <ImageView
            android:background="#BABABA"

            android:id="@+id/create_img"
            android:src="@drawable/ic_baseline_create_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


    </LinearLayout>




</com.zerobranch.layout.SwipeLayout>