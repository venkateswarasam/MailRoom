<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">





    <androidx.appcompat.widget.Toolbar
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"


        android:id="@+id/toolbar"
        android:background="@color/purple_700"
        android:layout_width="fill_parent"
        android:layout_height="56dp">

        <ImageView
            android:visibility="gone"
            android:src="@drawable/navigation_back"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showAsAction="always"
            />
        <TextView
            android:id="@+id/headertext"
            android:textSize="19.74sp"
            android:textColor="#FBFBFB"
            android:height="24dp"
            android:layout_height="24dp"
            android:layout_width="216dp"
            android:lineSpacingMultiplier="1.16"
            android:text="@string/goodafter"
            android:width="216dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"

            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_outline_account_circle_24"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        app:layout_constraintStart_toStartOf="@id/toolbar"
        app:layout_constraintTop_toBottomOf="@id/toolbar"

        android:id="@+id/onofflay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout

            android:visibility="gone"

            android:id="@+id/onlinepackages"

            android:elevation="3dp"
            android:orientation="vertical"
            android:background="@drawable/offline_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:width="234dp"
                android:height="17dp"
                android:drawableLeft="@drawable/outline_check_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/open_sans_semibold"
                android:lineSpacingMultiplier="1.42"
                android:text="All packages synced!"
                android:textColor="#99000000"
                android:textSize="12sp" />


            <TextView
                android:layout_marginStart="16dp"

                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/baseline_sync_24"
                android:textColor="#99000000"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans"
                android:height="13dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:lineSpacingMultiplier="1.40"
                android:text="Last sync a few seconds ago"
                android:width="243dp" />

        </LinearLayout>


        <LinearLayout

            android:visibility="gone"

            android:id="@+id/offlinepackages"

            android:elevation="3dp"
            android:orientation="vertical"
            android:background="@drawable/offline_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:width="234dp"
                android:height="17dp"
                android:drawableLeft="@drawable/outline_warning_amber_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/open_sans_semibold"
                android:lineSpacingMultiplier="1.42"
                android:text="Packages are not synced."
                android:textColor="#99000000"
                android:textSize="12sp" />


            <TextView
                android:layout_marginStart="16dp"

                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/baseline_sync_24"
                android:textColor="#99000000"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans"
                android:height="13dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:lineSpacingMultiplier="1.40"
                android:text="Last sync 2 hours ago"
                android:width="243dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView


            android:id="@+id/imagebarcode"

            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:src="@drawable/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="61dp"
            app:layout_constraintStart_toStartOf="@id/imagebarcode"
            app:layout_constraintTop_toBottomOf="@id/imagebarcode"

            android:id="@+id/scanner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:width="236dp"
            android:height="16dp"
            android:background="@drawable/buttonshape"


            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:letterSpacing="0.125"

            android:text="SCAN  BARCODES"
            android:textColor="@color/white"
            android:textSize="13.55sp"
            android:textStyle="bold" />


        <TextView
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="@id/scanner"
            app:layout_constraintTop_toBottomOf="@id/scanner"

            android:id="@+id/manual_package"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:width="248dp"
            android:height="16dp"
            android:textSize="13.55sp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"

            android:letterSpacing="0.125"
            android:lineSpacingMultiplier="1.18"
            android:text="ADD PACKAGES MANUALLY"
            android:textColor="#99000000"
            android:textStyle="bold" />


    </LinearLayout>









    <RelativeLayout
        android:layout_marginBottom="55dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBottomOf="parent"






        android:id="@+id/offlineconnection"
        android:background="@drawable/botoom_bg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/outline_cloud_off_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/offlinetext"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="start"
                android:layout_centerHorizontal="true"
                android:textColor="#99000000"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:height="17dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:lineSpacingMultiplier="1.42"
                android:text="YOUâ€™RE OFFLINE NOW"
                android:width="234dp" />

            <TextView
                android:height="28dp"
                android:gravity="start"
                android:layout_below="@+id/offlinetext"
                android:textColor="#99000000"
                android:textSize="9sp"
                android:fontFamily="@font/open_sans"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:lineSpacingMultiplier="1.33"
                android:text="You can still add packages, but the changes will be applied once an internet connection is restored."
                android:width="237dp" />
        </LinearLayout>



        <ImageView
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/close_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>